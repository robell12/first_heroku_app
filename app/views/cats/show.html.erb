<h1><%= @cat.name %></h1>
<% if @cat.picture? %>
  <%= cl_image_tag(@cat.picture.path, { size: '100x100', crop: :thumb}) %>
<% end %>

<p> <%= @cat.age %> </p>
<p> <%= @cat.gender %> </p>
<p> <%= @cat.fur_color %> </p>

<%= link_to 'Edit', edit_cat_path(@cat) %>
<%= link_to 'Delete', cat_path(@cat), method: :delete %>
<hr />
<%= link_to 'All Cats', cats_path %>
